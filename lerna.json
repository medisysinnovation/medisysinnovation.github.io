{
  "packages": ["packages/*"],
  "version": "0.1.255",
  "npmClient": "yarn",
  "command": {
    "publish": {
      "ignoreChanges": ["ignored-file", "*.md"],
      "npmClient": "yarn",
      "verifyAccess": false,
      "graphType": "all"
    },
    "bootstrap": {
      "ignore": "component-*",
      "npmClientArgs": ["--no-package-lock"]
    }
  }
}
